#!/bin/bash

menu="rofi"

toggle_menu() {
	if [[ $(pgrep -x "$menu") ]]; then
		pkill -x "$menu"
	else
		$menu "$@"
	fi
}

show_launcher() {
	toggle_menu -show drun
}

show_clipboard() {
	selected=$(cliphist list | toggle_menu -dmenu)

	if [[ -n $selected ]]; then
		echo "$selected" | cliphist decode | wl-copy
	fi
}

case "$1" in
"launcher") show_launcher ;;
"clipboard") show_clipboard ;;
esac
